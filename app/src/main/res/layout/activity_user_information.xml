<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="object.User" />
    </data>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="uit.group.manager.UserInformationActivity">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <components.Button
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                app:_icon="" />
        </android.support.v7.widget.LinearLayoutCompat>

        <components.Line
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:_isFull="true" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <components.ImageAvatar
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:_innerSize="100dp"
                app:_outerSize="100dp"
                app:_userId="@{user.id}"
                tools:background="@color/blueTransparent" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="@dimen/size"
                android:layout_weight="1"
                android:orientation="vertical">

                <components.TextBold
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="@{user.name}"
                    tools:ignore="RtlSymmetry"
                    tools:text="user.name" />

                <components.Text
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="@{user.email}"
                    tools:ignore="RtlSymmetry"
                    tools:text="user.email" />

            </android.support.v7.widget.LinearLayoutCompat>

            <components.Button
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                app:_icon="" />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp">

                <components.Text
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{user.birthdate.toString()}"
                    tools:text="user.birthdate" />

                <components.Text
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="@{user.gender.toString()}"
                    tools:text="user.gender" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

        <components.Line
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:_isFull="true" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <components.Button
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                app:_hasRipple="false"
                app:_icon="" />

            <components.TextBold
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="87\nNhiệm vụ đã hoàn thành" />


        </android.support.v7.widget.LinearLayoutCompat>

        <components.Line
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:_isFull="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeee"
                android:orientation="vertical">


                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <components.TextBold
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="@string/project" />

                    <components.Line
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:_isFull="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size">

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Số dự án đã tạo" />

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:text="2" />

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:text="Số dự án đã tham gia" />

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:text="9" />

                    </RelativeLayout>
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <components.TextBold
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="@string/task" />

                    <components.Line
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:_isFull="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size">

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Số nhiệm vụ đã tạo" />

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:text="2" />

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:text="Số nhiệm vụ đã tham gia" />

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:text="9" />
                    </RelativeLayout>
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <components.TextBold
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="@string/channel" />

                    <components.Line
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:_isFull="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size">

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Số kênh đã tạo" />

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:text="2" />

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:text="Số kênh đã tham gia" />

                        <components.Text
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:text="9" />

                    </RelativeLayout>
                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

        </ScrollView>

    </android.support.v7.widget.LinearLayoutCompat>
</layout>
