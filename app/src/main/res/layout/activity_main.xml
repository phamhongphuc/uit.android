<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="State"
            type="view.state.MainState"/>

        <variable
            name="Global"
            type="app.Global"/>
    </data>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <components.Socket_Status
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:_socketStatus="@{Global.socketStatus}"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Todo: Chuyển cái chỗ avatar này thành một thẻ riêng -->
            <FrameLayout
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size">

                <components.Image
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    app:_src="@{State.user.getPicture()}"/>
            </FrameLayout>

            <components.Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:_text="@{Global.test}"
                app:_textAlign="left"
                tools:_text="State.user.name"/>

            <components.Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="facebookLogout"
                app:_icon=""/>

        </android.support.v7.widget.LinearLayoutCompat>

        <components.Line
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:_isFull="true"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/size"
            android:background="@color/white"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <components.Button
                android:layout_width="@dimen/size"
                android:layout_height="match_parent"
                app:_icon=""/>

            <components.TextInput
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:inputType="text"
                android:maxLines="1"
                android:text="@={Global.test}"
                tools:text="@string/email_address"/>

            <components.Line
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <components.Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="createProject"
                app:_icon=""/>
        </android.support.v7.widget.LinearLayoutCompat>

        <components.Line
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:_isFull="true"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eee"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_project"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarSize="3dp"
                    android:scrollbarThumbVertical="@color/blueTransparent"
                    android:scrollbars="vertical"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_project"/>

            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</layout>