<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="State"
            type="view.state.ProjectDetailState"/>
    </data>

    <android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="uit.group.manager.ProjectDetailActivity">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/size"
            android:background="@color/white"
            android:elevation="2dp"
            android:orientation="horizontal">

            <components.Button
                android:layout_width="@dimen/size"
                android:layout_height="match_parent"
                app:_icon=""/>

            <components.Line
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <components.Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:_text="@{State.project.name}"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/com_facebook_button_like_background_color_selected"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <components.Button

                            android:layout_width="0dp"
                            android:layout_height="@dimen/size"
                            android:layout_weight="1"
                            app:_text="Tasks"/>

                        <components.Button

                            android:layout_width="@dimen/size"
                            android:layout_height="@dimen/size"
                            app:_icon=""/>
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_tasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:scrollbarSize="3dp"
                        android:scrollbarThumbVertical="@color/blueTransparent"
                        android:scrollbars="vertical"
                        tools:itemCount="2"
                        tools:listitem="@layout/task_item"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <components.Button

                            android:layout_width="0dp"
                            android:layout_height="@dimen/size"
                            android:layout_weight="1"
                            app:_text="Channels"/>

                        <components.Button

                            android:layout_width="@dimen/size"
                            android:layout_height="@dimen/size"
                            app:_icon=""/>
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView


                        android:id="@+id/list_channels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:scrollbarSize="3dp"
                        android:scrollbarThumbVertical="@color/blueTransparent"
                        android:scrollbars="vertical"
                        tools:itemCount="2"
                        tools:listitem="@layout/channel_item"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <components.Button

                            android:layout_width="0dp"
                            android:layout_height="@dimen/size"
                            android:layout_weight="1"
                            app:_text="Members"/>

                        <components.Button

                            android:layout_width="@dimen/size"
                            android:layout_height="@dimen/size"
                            app:_icon=""/>
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView


                        android:id="@+id/list_members"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:scrollbarSize="3dp"
                        android:scrollbarThumbVertical="@color/blueTransparent"
                        android:scrollbars="vertical"
                        tools:itemCount="2"
                        tools:listitem="@layout/user_item"/>
                </LinearLayout>


            </android.support.v7.widget.LinearLayoutCompat>
        </ScrollView>

    </android.support.v7.widget.LinearLayoutCompat>
</layout>
