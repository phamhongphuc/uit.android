<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="Global"
            type="app.Global"/>

        <variable
            name="socket"
            type="module.socket._Socket.State"/>
        <variable
            name="State"
            type="view.state.ProjectDetailState"/>
    </data>

    <android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="uit.group.manager.ProjectDetailActivity">

        <components.SocketStatus
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:_status="@{socket.status}"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/size"
            android:background="@color/white"
            android:elevation="2dp"
            android:orientation="horizontal">

            <components.Button
                android:layout_width="@dimen/size"
                android:layout_height="match_parent"
                android:onClick="back"
                app:_icon=""/>

            <components.Line
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <components.Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:_text="@{State.project.name}"/>

            <components.Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:_icon=""/>

        </android.support.v7.widget.LinearLayoutCompat>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <components.TextBold
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/tasks"
                            android:textSize="16sp"/>

                        <components.Button
                            android:layout_width="@dimen/size"
                            android:layout_height="@dimen/size"
                            app:_icon=""/>
                    </android.support.v7.widget.LinearLayoutCompat>

                    <components.Line
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:_isFull="true"/>

                    <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:id="@+id/list_tasks"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:scrollbarSize="3dp"-->
                    <!--android:scrollbarThumbVertical="@color/blueTransparent"-->
                    <!--android:scrollbars="vertical"-->
                    <!--tools:itemCount="1"-->
                    <!--tools:listitem="@layitem_taskitem"/>-->
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <components.TextBold
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/channels"
                            android:textSize="16sp"/>

                        <components.Button
                            android:layout_width="@dimen/size"
                            android:layout_height="@dimen/size"
                            app:_icon=""/>
                    </android.support.v7.widget.LinearLayoutCompat>

                    <components.Line
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:_isFull="true"/>

                    <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:id="@+id/list_channels"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:scrollbarSize="3dp"-->
                    <!--android:scrollbarThumbVertical="@color/blueTransparent"-->
                    <!--android:scrollbars="vertical"-->
                    <!--tools:itemCount="1"-->
                    <!--tools:listitem="@layitem_channelitem"/>-->
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <components.TextBold
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/members"
                            android:textSize="16sp"/>

                        <components.Button
                            android:layout_width="@dimen/size"
                            android:layout_height="@dimen/size"
                            app:_icon=""/>
                    </android.support.v7.widget.LinearLayoutCompat>

                    <components.Line
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:_isFull="true"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_members"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarSize="3dp"
                        android:scrollbarThumbVertical="@color/blueTransparent"
                        android:scrollbars="vertical"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_user"/>
                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>
        </ScrollView>

    </android.support.v7.widget.LinearLayoutCompat>
</layout>
