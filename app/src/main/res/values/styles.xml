<resources>

    <style name="SplashTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">@color/blue</item>

        <item name="colorAccent">#0088cc</item>
        <item name="android:colorControlHighlight">@color/blueTransparent</item>

        <item name="ButtonStyle">@style/Button_Style</item>
        <item name="LineStyle">@style/Line_Style</item>
    </style>
</resources>
