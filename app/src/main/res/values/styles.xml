<resources>

    <style name="SplashTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">@color/blue</item>

        <item name="colorAccent">#0088cc</item>
        <item name="android:colorControlHighlight">@color/blueTransparent</item>

        <item name="ButtonStyle">@style/Button_Style</item>
        <item name="LineStyle">@style/Line_Style</item>
        <item name="TextStyle">@style/Text_Style</item>
        <item name="ViewPagerIndexStyle">@style/ViewPagerIndex_Style</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
