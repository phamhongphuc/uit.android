<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Theme">
        <attr name="ButtonStyle" format="reference"/>
        <attr name="TextStyle" format="reference"/>
        <attr name="LineStyle" format="reference"/>
        <attr name="ViewPagerIndexStyle" format="reference"/>
    </declare-styleable>
    <declare-styleable name="View">
        <attr name="_foreground" format="color"/>
        <attr name="_background" format="color"/>
        <attr name="_color" format="color"/>
        <attr name="_colorActive" format="color"/>
    </declare-styleable>

    <!-- Components -->
    <declare-styleable name="Line">
        <attr name="_isFull" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="Image">
        <attr name="_src" format="string"/>
    </declare-styleable>
    <declare-styleable name="Button" parent="View">
        <attr name="_icon" format="string"/>
        <attr name="_text" format="string"/>
        <attr name="_textAlign" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="2"/>
            <enum name="center" value="1"/>
        </attr>
        <attr name="_foreground"/>
        <attr name="_background"/>
        <attr name="_backgroundActive" format="color"/>
        <attr name="_active" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="ViewPagerIndex">
        <attr name="_inactiveColor" format="color"/>
        <attr name="_activeColor" format="color"/>
        <attr name="_viewPagerId" format="reference"/>
    </declare-styleable>
</resources>